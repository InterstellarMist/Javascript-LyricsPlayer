{
  "name": "Javascript-LyricsPlayer",
  "version": "0.2.0-alpha.0.1",
  "description": "Displays lyrics of currently playing song in spotify",
  "license": "MIT",
  "author": "Nicholas Chai",
  "packageManager": "yarn@3.3.0",
  "main": "./main.js",
  "scripts": {
    "start": "electronmon .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^21.3.1",
    "electron-builder": "^23.6.0",
    "electronmon": "^2.0.2"
  },
  "build": {
    "appId": "com.lyricsplayer.app",
    "productName": "LyricsPlayer",
    "win": {
      "target": "portable",
      "icon": "./build/icons/512x512.png"
    },
    "linux": {
      "target": "AppImage",
      "category": "media",
      "icon": "./build/icons/512x512.png"
    }
  }
}
